# Production Environment Configuration for OAuth

# Required - Application URLs
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-super-secret-32-character-key-here

# Required - Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Google OAuth (Gmail, Drive, Calendar)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft OAuth (Outlook, OneDrive)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Slack OAuth
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret

# Twitter/X OAuth
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Dropbox OAuth
DROPBOX_CLIENT_ID=your-dropbox-client-id
DROPBOX_CLIENT_SECRET=your-dropbox-client-secret

# Database (Production - use PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/dxtr_autoflow

# Redis (Production - for session/state management)
REDIS_URL=redis://localhost:6379

# Security Headers
CORS_ORIGIN=https://your-domain.com

# Monitoring & Logging
LOG_LEVEL=error
SENTRY_DSN=your-sentry-dsn-here

# Rate Limiting (Production)
RATE_LIMIT_MAX=10
RATE_LIMIT_WINDOW_MS=900000

# Session Security
SESSION_MAX_AGE=86400
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict
